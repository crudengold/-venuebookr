<div class="card m-3 col-3 p-1" style="width: 350px;">
  <% if venue.photos.attached? %>
    <img class="index-photo card-img-top" src=<%= cl_image_path venue.photos[0].key %> alt="Card image cap">
  <% end %>
  <div class="card-body text-start">
