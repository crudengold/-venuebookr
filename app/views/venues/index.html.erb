<div class="container">
    <br>
  <h1>All venues</h1>
  <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
    <br>
    <div class="row justify-content-center">
      <% @venues.each do |venue| %>
        <div class="card m-3 col-3 p-2" style="width: 18rem;">
          <% if venue.photos.attached? %>
            <img class="card-img-top rounded" src=<%= cl_image_path venue.photos[0].key %> alt="Card image cap">
          <% end %>
          <div class="card-body">
            <h5 class="card-title border-bottom border-danger pb-2">ðŸŽ‰ <%= venue.name %></h5>
            <h5 class="card-title pt-2">ðŸ’° Â£<%= venue.price_per_hour %> per day</h5>
            <%= link_to '', venue_path(venue), class:'stretched-link' %>
          </div>
        </div>
      <% end %>
    </div>
</div>
