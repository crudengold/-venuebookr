
<div class="card m-3 col-lg-5 col-md-2 p-2 text-center">
    <% if venue.photos.attached? %>
      <img class="card-img-top rounded" src=<%= cl_image_path venue.photos[0].key %> alt="Card image cap" id="index-photo">
    <% end %>
    <div class="card-body">
      <h5>🎉 <%= venue.name %></h5>
      <h6 class="card-title border-bottom border-danger pb-2"><%= venue.location %></h6>

      <p class="card-title pt-2">💰 £<%= venue.price_per_hour %> per day</p>
      <p class="card-title pt-2">👯 Capacity: <%= venue.capacity %> people</p>
      <%= link_to '', venue_path(venue), class:'stretched-link' %>
    </div>
  </div>
