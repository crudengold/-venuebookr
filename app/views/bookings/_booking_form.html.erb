<div class="column">
<%= simple_form_for [venue, booking] do |f|%>
  <div class="mb-3 form-control p-2" style="border-radius: 17px">
    <%= f.input :start_date,
            as: :string,
            input_html: { data: { controller: "datepicker" } },
            label_html: {class:"me-3"} %>
  </div>
  <div class="mb-3 form-control p-2" style="border-radius: 17px">
    <%= f.input :end_date,
            as: :string,
            input_html: { data: { controller: "datepicker" } },
            label_html: {class:"me-3"} %>
  </div>
  <div class="mb-3 btn-primary text-center">
  <%= f.submit 'Book', class: "btn btn-default btn-danger btn-lg", style: "color: white" %>
  </div>
<% end %>
</div>
