<div class="row">
  <div class="col-6 offset-3 bg-white p-4 rounded">

  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class:"form-control bg-white mb-3" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "form-control bg-white mb-3" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>
<div class="text-center">
  <%= render "devise/shared/links" %>
</div>

  </div>
</div>
