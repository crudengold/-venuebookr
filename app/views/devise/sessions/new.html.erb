<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://drinkohza.com/cdn/shop/articles/pexels-cottonbro-3171815.jpg?v=1633625938); background-size: cover; height: 100vh;">

<div class="container mt-5">
  <div class="row">
    <div class="card col-md-6 offset-md-3 bg-white p-4 rounded shadow-lg">

      <h2 class="text-center mb-4">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "form-control bg-white mb-3" } %>
        </div>

        <div class="form-group">
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "form-control bg-white mb-3" } %>
        </div>

        <div class="form-group">
          <%= f.input :remember_me, as: :boolean, label_html: { class: "ms-2" } if devise_mapping.rememberable? %>
        </div>

        <div class="form-group mt-4 text-center">
          <%= f.button :submit, "Log in", class: "btn btn-danger btn-block", style: "color: white; border-radius: 10px; margin-bottom: 20px;" %>
        </div>
      <% end %>

      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>
</div>
